# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=segurifai_db
DB_USER=postgres
DB_PASSWORD=yourpassword
DB_HOST=localhost
DB_PORT=5432

# For SQLite (Development)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://paq-seguro-verde.lovable.app

# PAQ Wallet API Integration (Guatemala - PAQ-GO)
# Token Generation & Query endpoint
PAQ_WALLET_EMITE_URL=https://www.paq.com.gt/paqpayws/emite.asmx
# Payment endpoint (PAQ-GO button)
PAQ_WALLET_PAQGO_URL=https://www.paq.com.gt/paqgo/paqgo.asmx
# Credentials (rep_id, usuario, password) - provided by PAQ
PAQ_WALLET_ID_CODE=your-rep-id
PAQ_WALLET_USER=your-username
PAQ_WALLET_PASSWORD=your-password

# Email Settings (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-password

# =============================================================================
# PRODUCTION SETTINGS (Required for deployment)
# =============================================================================

# Environment identifier
ENVIRONMENT=development

# PAQ Webhook Security (REQUIRED in production - will fail without it)
PAQ_WEBHOOK_SECRET=your-webhook-secret-from-paq

# Centralized Logging (Sentry)
# Get your DSN from https://sentry.io
SENTRY_DSN=

# AWS S3 Cloud Storage (for media files in production)
USE_S3_STORAGE=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=segurifai-media
AWS_S3_REGION_NAME=us-east-1

# Cloudflare Security (Optional - enable for production)
CLOUDFLARE_ENABLED=False
CLOUDFLARE_VERIFY_IP=True

# =============================================================================
# PAQ SSO AUTHENTICATION (CRITICAL for PAQ-only access)
# =============================================================================
# All SegurifAI access is through PAQ app - no standalone registration
# This secret must be coordinated with PAQ team
PAQ_SSO_SECRET=your-32-char-min-shared-secret-with-paq
PAQ_SSO_TOKEN_EXPIRY=300

# =============================================================================
# GOOGLE MAPS API (For Location Services)
# =============================================================================
# Get your API key from: https://console.cloud.google.com/google/maps-apis
# Required APIs to enable:
# 1. Maps JavaScript API - Frontend map display
# 2. Directions API - Route calculation & ETA
# 3. Distance Matrix API - Distance/time between multiple points
# 4. Geocoding API - Address <-> Coordinates conversion
# 5. Places API - Address autocomplete
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_MAPS_SERVER_KEY=your-google-maps-server-key

# =============================================================================
# ANTHROPIC CLAUDE AI (For Vehicle/Health Validation & Evidence Review)
# =============================================================================
ANTHROPIC_API_KEY=your-anthropic-api-key

# =============================================================================
# PAQ TEST USER OVERRIDES (SAFE SANDBOX)
# =============================================================================
# Test user phone to allow Q5.00 PAQ Wallet charges and mocked OTP when PAQ_TEST_MODE=True
PAQ_TEST_PHONE=30082653
PAQ_TEST_PRICE=5.00
PAQ_TEST_MODE=True
